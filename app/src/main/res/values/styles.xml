<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainComponent">
        <item name="android:onClick">onViewClick</item>
    </style>

    <style name="MainTextTheme" parent="MainComponent">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="HeaderTextTheme" parent="MainTextTheme">
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="LeftTextTheme" parent="MainTextTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="RightTextTheme" parent="MainTextTheme">
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>
